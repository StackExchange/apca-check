    "version": "0.1.0",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "./dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/StackExchange/apca-check.git"
    },
    "license": "MIT",
    "files": [
        "dist"
    ],
    "keywords": [
        "accessibility",
        "a11y",
        "axe",
        "axe-core",
        "apca"
