        "@types/apca-w3": "^0.1.3",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@web/dev-server-esbuild": "^1.0.2",
        "@web/dev-server-rollup": "^0.6.1",
        "@web/test-runner": "^0.18.1",
        "@web/test-runner-playwright": "^0.11.0",
        "eslint": "^8.57.0",
